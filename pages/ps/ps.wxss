.pubTitle{display: flex; justify-content: space-between; height: 60rpx; align-items: center; margin-bottom: 40rpx;}
.pubTitle .txt{font-size: 40rpx; height:100%;position: relative; padding-left: 20rpx;}
.pubTitle .txt::before{display: block;width: 8rpx;height: 34rpx;
  background-color: #c8020b; content: ""; position: absolute; left: 0;top: 50%;margin-top: -15rpx;}
.pubTitle .more{font-size: 34rpx; color:#666}



.banner image{
    width: 100%;
    height: 1080rpx;
    display: block; /*让image变成块元素，可以去掉中间空白的缝隙*/
}

.psBox{
    padding: 80rpx 0; background:#1C356E;
}
.psBox:nth-child(2n){background: #fff;}
.psBoxTit{
    position: relative;
    width: 490rpx;
    height: 70rpx;
    background: #DE2E05;
    border-radius:70rpx;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
    font-size: 40rpx;
    margin: 0   auto; /*子div要在父div内居中的样式设置*/
    margin-bottom: 40rpx;
}
.psBoxTit::before{
    display: block;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border: 2px dotted #DE2E05 ;
    position: absolute;
    left: 0;
    top: 0;
    content:""; /*要使框出现，这个必须要有*/
    border-radius: 70rpx;
    transform: scale(1.03,1.2); /*往x,y 进行扩展*/

}
.psBoxCon .pic{
    width: 100%;
}
.psBoxCon .text{
    padding: 40rpx 20rpx 0;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap; 
}

.psBoxCon .text view{
    width: 50%;
    font-size: 30rpx;
    line-height: 1.8em;
    position: relative;
    box-sizing: border-box;
    padding: 0 15rpx;
}

.psBoxCon .text view::before{
    content: "";
    display: block;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background: #000;
    position: absolute;
    top:50%;
    left:0;
    margin-top: -5rpx; /*当margin是负值的时候， 表示是向上偏移5rpx*/

}
.psBox:nth-child(2n-1) .psBoxCon .text{color:#fff}
.psBox:nth-child(2n-1) .psBoxCon .text view::before{background: #fff;}
.psBoxConOne{
    color:#fff;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.psBoxConOne .item{
    text-align: center;
    padding: 20rpx;
}
.psBoxConOne  image{
   width: 180rpx;
   height: 180rpx;
}
.psBoxConOne .item view{
    text-transform: uppercase;
    font-size: 28rpx;
}

